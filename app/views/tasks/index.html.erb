<div class="container">
<h1>TASKS INDEX</h1>
<% @tasks.each do |task| %>
  <li>
    <%= link_to task.title, task_path(task) %>
    <% if task.completed %>
      <%= "\u2714" %>
    <% else %>
      <%= "\u274C" %>
    <% end %>
    <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </li>
<% end %>

<%= link_to "Add a new task", new_task_path %>
</div>
